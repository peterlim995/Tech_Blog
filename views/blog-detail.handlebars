<div class='container p-5 d-grid gap-4'>
  <h3>Blog</h3>
  <div class='card'>
    <div class='card-header'>
      <div class="row">
        <div class='col-12 col-md-7'>
          <h5 class='card-title'>{{title}}!</h5>
        </div>
        <div
          class='col-12 col-md-5 d-flex justify-content-end '
        >
          <p>Posted by
            {{{get_emoji}}}{{user.name}}
            on
            {{format_date date_created}}
          </p>
        </div>
      </div>
    </div>
    <div class='card-body'>
      <p class='card-text'>
        {{content}}
      </p>
    </div>
  </div>
  {{#if comments.length}}
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
      <div class='card'>
        <div class='card-header d-flex justify-content-end'>
          <p class='card-title'>Commented by
            {{{get_emoji}}}{{comment.user.name}}
            on
            {{format_date comment.date_created}}</p>
        </div>
        <div class='card-body'>
          <p class='card-text'>{{comment.comment}}</p>
        </div>
      </div>
    {{/each}}
  {{/if}}
  <div>

    <form class='new-comment-form'>
      {{#if logged_in}}
        <div class='form-floating'>
          <textarea
            class='form-control border border-info'
            placeholder='Leave a comment here'
            id='comment'
            style='height: 100px'
          ></textarea>
          <label for='floatingTextarea2'>Comments</label>
        </div>
        <div class='d-flex justify-content-center p-3'>
          <button type='submit' class='btn btn-primary'>Add Comment</button>
        </div>
      {{/if}}
    </form>

  </div>
</div>

<script src='../js/add-comment.js'></script>