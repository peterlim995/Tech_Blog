<div class='row pt-5'>
  <div class='col-12 col-sm-2 col-md-4'></div>
  <div class='col-12 col-sm-8 col-md-4'>
    <form class='login-form form-signin'>
      <h1 class='h3 mb-3 font-weight-normal text-center'>Please sign in</h1>
      <label for='inputEmail' class='sr-only'>Email address</label>
      <input
        type='email'
        id='email-login'
        class='form-control'
        placeholder='Email address'
        required
        autofocus
      />
      <label for='inputPassword' class='sr-only'>Password</label>
      <input
        type='password'
        id='password-login'
        class='form-control'
        placeholder='Password'
        required
      />
      <div class='d-grid gap-2'>
        <button class='my-3 btn btn-lg btn-primary btn-block' type='submit'>Sign
          in</button>
      </div>
      <p class='text-muted text-center'><a href='/signup'>Sign Up Instead</a></p>
    </form>
  </div>
  <div class='col-12 col-sm-2 col-md-4'></div>
</div>

<script src='./js/login.js'></script>