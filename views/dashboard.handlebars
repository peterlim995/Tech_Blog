<div class='container p-5 d-grid gap-4'>
  <div class='d-flex justify-content-center'>
    <h2>Welcome, {{name}}!</h2>
  </div>
  {{#if blogs.length}}
    <h3>Current Blogs:</h3>
    {{#each blogs as |blog|}}
      <div class='card'>
        <div class='card-header d-flex justify-content-between'>
          <div class='card-title'>
            <h3><a href='/blog/{{blog.id}}'>{{blog.title}}</a></h3>
          </div>
          <div>
            <p>
              {{format_date blog.date_created}} 
              <button
                class='btn btn-sm btn-danger'
                data-id='{{blog.id}}'
              >DELETE</button>
            </p>

          </div>
        </div>

      </div>
    {{/each}}
  {{/if}}
  <div class='d-flex justify-content-center p-3'>
    <button class='btn btn-primary' id='add-blog' onclick="window.location.href='/blog'">Add blog</button>
  </div>

</div>