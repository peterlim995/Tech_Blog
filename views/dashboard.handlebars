<div class='container p-5 d-grid gap-4 blog-list'>
  <div class='d-flex justify-content-center'>
    <h2>Welcome, {{name}}!</h2>
  </div>
  {{#if blogs.length}}
    <h3>Current Blogs:</h3>
    {{#each blogs as |blog|}}
      <div class='card'>
        <div class='card-header' >
          <div class='row'>
            <div class='col-12 col-md-7'>
              <h5><a href='/blog/{{blog.id}}'>{{blog.title}}</a></h5>
            </div>
            <div class='col-12 col-md-5  d-flex justify-content-end align-items-center'>
              <p class='m-0'>
                {{format_date blog.date_created}}

                <button
                  class='btn btn-sm btn-info m-0'
                  data-id='{{blog.id}}'
                  data-function='edit'
                >EDIT</button>
                <button
                  class='btn btn-sm btn-danger m-0'
                  data-id='{{blog.id}}'
                  data-function='delete'                  
                >DELETE</button>
              </p>
            </div>
          </div>
        </div>

      </div>
    {{/each}}
  {{/if}}
  <div class='d-flex justify-content-center p-3'>
    <button
      class='btn btn-primary'
      id='add-blog'
      onclick="window.location.href='/blog'"
    >Add blog</button>
  </div>

</div>

<script src='./js/dashboard.js'></script>